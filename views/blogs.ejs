<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/static/blogs.css">
  <title>BLOGS</title>
</head>
<body>
  <div class="container">
    
    <% blogs.forEach(blog => { %>

      <div class="blog">
        <h1> <%= blog.title %> </h1>

        <div class="content">
          <%- blog.content %>
        </div>

        <div class="pagination">
          
          <% if(pageNumber == 1){ %>
            <a href="/blogs?page=<%= Number(pageNumber) - 1 %>" class="hidden">Previous</a>
          <% } else { %>
            <a href="/blogs?page=<%= Number(pageNumber) - 1 %>">Previous</a>
          <% } %> 

          <% if(pageNumber == pages){ %>
            <a href="/blogs?page=<%= Number(pageNumber) + 1 %>" class="hidden">Next</a>
          <% } else { %>
            <a href="/blogs?page=<%= Number(pageNumber) + 1 %>">Next</a>
          <% } %> 

        </div>
      </div>
      

    <% }) %>
  </div>
</body>
</html>